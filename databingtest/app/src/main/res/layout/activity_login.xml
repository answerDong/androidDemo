<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/icon_login_bg">

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/et_login_password"
        android:layout_alignStart="@+id/et_login_password"
        android:layout_marginTop="190dp"
        android:background="@drawable/btn_login_text"
        android:ems="10"
        android:hint="用 户 名"
        android:inputType="textPersonName"
        android:textColorHint="#CFCFCF"
        android:maxLength="12"
        android:padding="5dp"
        android:text=""/>

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/btn_login_sb"
        android:layout_alignStart="@+id/btn_login_sb"
        android:layout_below="@+id/et_login_name"
        android:background="@drawable/btn_login_text"
        android:ems="10"
        android:hint="密 码"
        android:maxLength="12"
        android:inputType="textPassword"
        android:padding="5dp"
        android:text=""
        android:textColorHint="#CFCFCF"/>

    <Button
        android:id="@+id/btn_login_sb"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_below="@+id/et_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login_dl"
        android:text="登  录"
        android:textSize="17sp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btn_login_zc"
        android:layout_width="320dp"
        android:layout_height="43dp"
        android:layout_below="@+id/btn_login_sb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_zc"
        android:text="注册账号"
        android:textSize="17sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_login_password"
        android:layout_alignRight="@+id/et_login_password"
        android:layout_below="@+id/et_login_password"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:text="忘记密码？"/>

</RelativeLayout>
